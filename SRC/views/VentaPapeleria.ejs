<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Venta</title>
    <link href="/CSS/VentaPapeleria.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="sidebar">
                <div class="logo_content">
                    <div class="logo">
                        <div class="row">
                            <div class="col">
                                <i class='bx bx-package' ></i>
                            </div>
                            <div class="col">
                                <div class="logo_name">Papeleria</div>
                            </div>
                        </div>
                    </div>
                    <i class='bx bx-menu-alt-left' id="btn"></i>
                </div>
                <ul class="nav_list">
                    <li class="my-1">
                        <a href="">
                            <i class="bi bi-boxes"></i>
                            <span class="links-name">Venta</span>
                        </a>
                        <span class="tooltip">Venta</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/PaqueteriaAlm/AddSection">
                            <i class="bi bi-plus-square"></i>
                            <span class="links-name">Almacen</span>
                        </a>
                        <span class="tooltip">Almacen</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/PaqueteriaAlm/EnviarPaq">
                            <i class="bi bi-truck"></i>
                            <span class="links-name">Reabastecimiento</span>
                        </a>
                        <span class="tooltip">Reabastecimiento</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/direct">
                            <i class='bx bx-log-out' ></i>
                            <span class="links-name">Salir</span>
                        </a>
                        <span class="tooltip">Salir</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-sm- col-md- col-lg-5 col-xl-"></div>
                <div class="col-sm- col-md- col-lg-2 col-xl- text-center mt-5">
                    <h2 class="mb-3">Venta</h2>
                </div>
                <div class="col-sm- col-md- col-lg-5 col-xl- text-end">
                    <i id="iconusr" class='bx bx-user-circle bx-lg mt-2'></i>
                </div>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table text-center">
                        <thead class="align-middle">
                        <tr id="theader">
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Accion</th>
                        </tr>
                        </thead>
                        <tbody id="tbody" class="align-middle">
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <button class="btn btn-danger">Eliminar</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm- col-md- col-lg-6 col-xl- text-start">
                    <button class="btn btn-success">Agregar producto</button>
                </div>
                <div class="col-sm- col-md- col-lg-6 col-xl- text-end">
                    <div class="row" id="checkcheck">
                        <div class="col-12 text-start">
                            <h5>Total:</h5>
                        </div>
                        <div class="col-12 text-end">
                            <h5>$177.00</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    let btn = document.querySelector("#btn");
    let sidebar = document.querySelector(".sidebar");

    btn.onclick = function (){
        sidebar.classList.toggle("active");
    }
</script>
</body>
</html>