<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Venta</title>
    <link href="/CSS/VentaPapeleria.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 col-lg-2 col-xl-1">
            <div class="sidebar">
                <div class="logo_content">
                    <div class="logo">
                        <div class="row">
                            <div class="col">
                                <i class="bi bi-pencil"></i>
                            </div>
                            <div class="col">
                                <div class="logo_name">Papeleria</div>
                            </div>
                        </div>
                    </div>
                    <i class='bx bx-menu-alt-left' id="btn"></i>
                </div>
                <ul class="nav_list">
                    <li class="my-1">
                        <a href="">
                            <i class="bi bi-cash-coin"></i>
                            <span class="links-name">Venta</span>
                        </a>
                        <span class="tooltip">Venta</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/InventPape">
                            <i class="bi bi-box-fill"></i>
                            <span class="links-name">Almacen</span>
                        </a>
                        <span class="tooltip">Almacen</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/ReabastPape">
                            <i class="bi bi-clipboard-plus"></i>
                            <span class="links-name">Reabastecimiento</span>
                        </a>
                        <span class="tooltip">Reabastecimiento</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/direct">
                            <i class='bx bx-log-out' ></i>
                            <span class="links-name">Salir</span>
                        </a>
                        <span class="tooltip">Salir</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-12 col-md-10 col-lg-10 col-xl-11">
            <div class="row">
                <div class="col-sm- col-md- col-lg-5 col-xl-"></div>
                <div class="nueve col-sm- col-md- col-lg-2 col-xl- text-center mt-5">
                    <h2 class="mb-3">Venta</h2>
                </div>
                <div class="col-sm- col-md- col-lg-5 col-xl- text-end">
                    <i id="iconusr" class='bx bx-user-circle bx-lg mt-2'></i>
                </div>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table text-center" id="tablapro">
                        <thead class="align-middle">
                        <tr id="theader">
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Accion</th>
                        </tr>
                        </thead>
                        <tbody id="tbody" class="align-middle">

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 text-start">
                    <button class="nueve btn btn-success" data-bs-toggle="modal" data-bs-target="#modalForm">Agregar producto</button>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 text-end">
                    <div class="row">
                        <div class="col-6"></div>
                        <div class="vstack gap-2 col-6 mx-auto">
                            <div class="row" id="checkcheck">
                                <div class="col-12 text-start mt-2">
                                    <h5>Total:</h5>
                                </div>
                                <div class="col-12 text-end">
                                    <h5 id="Total">$0.00</h5>
                                </div>
                                <div class="col-1"></div>
                                <div class="col-10">

                                </div>
                                <div class="col-1"></div>
                            </div>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-7">
                                    <form action="/Operis/VentaPape/SellComplete" method="post">
                                        <button id="confirmar" name="confirmar" value="|" class="btn btn-secondary mt-2" disabled>Confirmar venta</button>
                                    </form>
                                </div>
                                <div class="col-4"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade"  id="modalForm" tabindex="-1" aria-labelledby="modalFormLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4">
                    <div class="modal-header" id="popupHeader">
                        <h4>Agregar producto</h4>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <div class="row text-center">
                                <i class="bi bi-clipboard-plus-fill icon"></i>
                                <h5>Producto</h5>
                                <div class="row my-2">
                                    <div class="col-md"></div>
                                    <div class="col-md">
                                        <select name="" id="Productos" class="form-control">
                                            <option value="">Seleccione una producto</option>
                                            <%
                                            for (let i in product){
                                                %>
                                            <option value="<%=product[i].idprodu%>|<%=product[i].nom_produ%>|<%=product[i].pvent_produ%>|<%=product[i].unidades_disp%>"><%=product[i].nom_produ%></option>
                                            <%
                                            }
                                            %>
                                        </select>
                                    </div>
                                    <div class="col-md"></div>
                                </div>
                                <h5>Cantidad</h5>
                                <div class="row my-2">
                                    <div class="col-md"></div>
                                    <div class="col-md">
                                        <input type="number" id="cantidad" class="form-control">
                                    </div>
                                    <div class="col-md"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md"></div>
                                    <div class="col-md me-2">
                                        <button id="closemodal" class="btn btn-outline-danger" data-bs-dismiss="modal">Salir</button>
                                    </div>
                                    <div class="col-md ms-2">
                                        <button class="btn btn-outline-secondary" onclick="AddDataTable();">Guardar</button>
                                        <script>

                                            function Validate (){
                                                const optselect = document.getElementById("Productos").selectedIndex;
                                                const txtselect = document.getElementById("cantidad").value;
                                                console.log(txtselect);
                                                var bool = false;
                                                if (optselect === 0){
                                                    document.getElementById("Productos").style.borderColor = "red";
                                                    alert("Selecciona un producto");
                                                } else {
                                                    if (txtselect == ""){
                                                        document.getElementById("cantidad").style.borderColor = "red";
                                                        alert("Ingresa la cantidad");
                                                    } else {
                                                        document.getElementById("Productos").style.borderColor = "";
                                                        document.getElementById("cantidad").style.borderColor = "";
                                                        bool = true;
                                                        return bool;
                                                    }
                                                }
                                            }
                                            function AddDataTable(){
                                                const bool = Validate();
                                                if (bool){
                                                    const datos = document.getElementById("Productos").value;
                                                    const dato = datos.split("|");
                                                    const cantidad = document.getElementById("cantidad").value;
                                                    console.log(cantidad);
                                                    var tabla = document.getElementById("tablapro");
                                                    var row = tabla.insertRow(1);
                                                    var celda1 = row.insertCell(0);
                                                    var celda2 = row.insertCell(1);
                                                    var celda3 = row.insertCell(2);
                                                    var celda4 = row.insertCell(3);

                                                    celda1.innerText = dato[1];
                                                    celda2.innerText = cantidad;
                                                    celda3.innerText = dato[2];
                                                    celda4.innerHTML = '<button class="btn btn-danger" onclick="DeleteRow(this);">Eliminar</button>';

                                                    var btntxt = document.getElementById("confirmar").value;
                                                    if (btntxt !== "|"){
                                                        document.getElementById("confirmar").value = `${dato[0]}/${cantidad}|${btntxt}`;
                                                    }else{
                                                        document.getElementById("confirmar").value = `${dato[0]}/${cantidad}`;
                                                    }
                                                    Total();
                                                }
                                            }
                                            function DeleteRow(boton){
                                                var tabla = boton.parentNode.parentNode.parentNode;
                                                var fila = boton.parentNode.parentNode;
                                                var indice = fila.rowIndex;
                                                tabla.removeChild(fila);

                                                var btntxt = document.getElementById("confirmar").value;
                                                var indiceReal = parseInt(indice) - 1;
                                                var arraytxt = btntxt.split("|");
                                                console.log(arraytxt);
                                                console.log(`Indice en array ${indiceReal}`);
                                                var newtxt = "";
                                                var ind = document.getElementById("tablapro").rows.length;

                                                if (ind == 1){
                                                    document.getElementById("confirmar").value = "|";
                                                } else{
                                                    for (let i in arraytxt){
                                                        if (indiceReal == i){
                                                            arraytxt.splice(indiceReal,1);
                                                            console.log(arraytxt[0]);
                                                        }
                                                    }
                                                    for (let i in arraytxt){
                                                        if (newtxt == ""){
                                                            newtxt =`${arraytxt[i]}`;
                                                        } else {
                                                            newtxt = `${newtxt}|${arraytxt[i]}`;
                                                        }
                                                    }
                                                    document.getElementById("confirmar").value = newtxt;
                                                }

                                                Total();
                                            }
                                            function Total(){
                                                var tabla = document.getElementById("tablapro");
                                                var tablesize = tabla.rows.length;
                                                var operacion = 0.0;
                                                if (tablesize !== 1){
                                                    for (let x = 0; x < tablesize; x++){
                                                        if (x !== 0){
                                                            var fila = tabla.rows[x];
                                                            var celda = fila.cells[2];
                                                            var celda2 = fila.cells[1];
                                                            var dato = celda.innerHTML;
                                                            var dato2 = celda2.innerHTML;
                                                            operacion = operacion + (parseInt(dato) * parseInt(dato2));
                                                        }
                                                    }
                                                    if (operacion !== 0.0){
                                                        var txt = document.getElementById("Total");
                                                        txt.innerText = `$${operacion}`;
                                                        const bt = document.getElementById("confirmar");
                                                        bt.disabled = false;
                                                    }
                                                } else{
                                                    var txt = document.getElementById("Total");
                                                    txt.innerText = `$0.00`;
                                                    const bt = document.getElementById("confirmar");
                                                    bt.disabled = true;
                                                }
                                            }
                                        </script>
                                    </div>
                                    <div class="col-md"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    let btn = document.querySelector("#btn");
    let sidebar = document.querySelector(".sidebar");

    btn.onclick = function (){
        sidebar.classList.toggle("active");
    }
    //modal
    const myModal = document.getElementById('myModal')
    const myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', () => {
        myInput.focus()
    })
</script>
</body>
</html>