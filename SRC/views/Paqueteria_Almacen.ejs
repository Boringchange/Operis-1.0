<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Almacen</title>
    <link href="../CSS/Paqueteria_Almacen.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>

<div class="container-fluid">
<div class="row">
    <div class="col-md-2">
        <div class="sidebar">
            <div class="logo_content">
                <div class="logo">
                    <div class="row">
                        <div class="col">
                            <i class='bx bx-package' ></i>
                        </div>
                        <div class="col">
                            <div class="logo_name">Paqueteria</div>
                        </div>
                    </div>
                </div>
                <i class='bx bx-menu-alt-left' id="btn"></i>
            </div>
            <ul class="nav_list">
                <li class="my-1">
                    <a href="">
                        <i class='bx bxs-package' ></i>
                        <span class="links-name">Almacen</span>
                    </a>
                    <span class="tooltip">Almacen</span>
                </li>
                <li class="my-1">
                    <a href="/PaqueteriaAlm/AddSection">
                        <i class='bx bx-clipboard' ></i>
                        <span class="links-name">Registro de paquetes</span>
                    </a>
                    <span class="tooltip">Registro de paquetes</span>
                </li>
                <li class="my-1">
                    <a href="/PaqueteriaAlm/EnviarPaq">
                        <i class='bx bx-flag'></i>
                        <span class="links-name">Entrega de paquetes</span>
                    </a>
                    <span class="tooltip">Entrega de paquetes</span>
                </li>
                <li class="my-1">
                    <a href="/direct/">
                        <i class='bx bxs-log-out' id="log-out"></i>
                        <span class="links-name">Salir</span>
                    </a>
                    <span class="tooltip">Salir</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-10">
        <div class="row text-end">
            <i class='bx bx-user-circle bx-lg mt-2' style='color:#023f58'  ></i>
        </div>
        <div class="row text-center">
            <h2 class="mb-3">Almacen</h2>
        </div>
        <div class="row">
            <div class="table-responsive">
                <table class="table text-center">
                    <thead class="align-middle">
                        <tr id="theader">
                            <th>ID paquete</th>
                            <th>ID destinatario</th>
                            <th>Fecha de llegada</th>
                            <th>Fecha de salida</th>
                            <th>Descripcion</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tbody" class="align-middle">
                    <%
                    for (let i in paquetes){%>
                        <tr>
                            <td><%= paquetes[i].idpaq%></td>
                            <td><%= paquetes[i].tipo_paq%></td>
                            <td><%= paquetes[i].indate%></td>
                            <td><%= paquetes[i].outdate%></td>
                            <td><%= paquetes[i].desc_paq%></td>
                            <td>
                                <div class="row">
                                    <div class="col mb-2">
                                        <form action="/PaqueteriaAlm/EditPaqSection" method="post">
                                            <button name="PaqToEdit" value="<%= paquetes[i].idpaq%>" id="btnmod" class="btn">Modificar</button>
                                        </form>
                                    </div>
                                    <div class="col mt-2">
                                        <form action="/PaqueteriaAlm/DeletePaq" method="post">
                                            <button name="PaqToDelete" value="<%= paquetes[i].idpaq%>" class="btn btn-danger">Eliminar</button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    <%
                    }
                    %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
<script>
    let btn = document.querySelector("#btn");
    let sidebar = document.querySelector(".sidebar");

    btn.onclick = function (){
        sidebar.classList.toggle("active");
    }
</script>
</body>
</html>