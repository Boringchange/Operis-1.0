<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Inventario</title>
    <link href="/CSS/InventarioPapeleria.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
<div class="container-fluid principal">
    <div class="row">
        <div class="col-md-2">
            <div class="sidebar">
                <div class="logo_content">
                    <div class="logo">
                        <div class="row">
                            <div class="col">
                                <i class="bi bi-pencil"></i>
                            </div>
                            <div class="col">
                                <div class="logo_name">Papeleria</div>
                            </div>
                        </div>
                    </div>
                    <i class='bx bx-menu-alt-left' id="btn"></i>
                </div>
                <ul class="nav_list">
                    <li class="my-1">
                        <a href="/Operis/VentaPape">
                            <i class="bi bi-cash-coin"></i>
                            <span class="links-name">Venta</span>
                        </a>
                        <span class="tooltip">Venta</span>
                    </li>
                    <li class="my-1">
                        <a href="">
                            <i class="bi bi-box-fill"></i>
                            <span class="links-name">Almacen</span>
                        </a>
                        <span class="tooltip">Almacen</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/ReabastPape">
                            <i class="bi bi-clipboard-plus"></i>
                            <span class="links-name">Reabastecimiento</span>
                        </a>
                        <span class="tooltip">Reabastecimiento</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/direct">
                            <i class='bx bx-log-out' ></i>
                            <span class="links-name">Salir</span>
                        </a>
                        <span class="tooltip">Salir</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-sm-12 col-md-1 col-lg-4 col-xl-4-"></div>
                <div class="col-sm-12 col-md-9 col-lg-4 col-xl-4 text-center mt-5">
                    <div id="titulo" class="fs-2 mb-2 bg-light">
                        Almacenamiento
                    </div>
                </div>
                <div class="col-sm-12 col-md-2 col-lg-4 col-xl-4 text-end">
                    <i id="iconusr" class='bx bx-user-circle bx-lg mt-2'></i>
                </div>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table text-center">
                        <thead class="align-middle">
                        <tr id="theader">
                            <th>ID</th>
                            <th>Nombre del producto</th>
                            <th>Unidades disponibles</th>
                            <th>Precio Base</th>
                            <th>Precio de venta</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody id="tbody" class="align-middle">
                        <%
                        for (let i in product){
                            %>
                            <tr>
                                <td><%=product[i].idprodu%></td>
                                <td><%=product[i].nom_produ%></td>
                                <td><%=product[i].unidades_disp%></td>
                                <td><%=product[i].padq_produ%></td>
                                <td><%=product[i].pvent_produ%></td>
                                <td>
                                    <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalFormMod<%=i%>">Modificar</button>
                                    <div class="modal fade"  id="modalFormMod<%=i%>" tabindex="-1" aria-labelledby="modalFormLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content rounded-4">
                                                <div class="modal-header" id="popupHeader">
                                                    <h4>Modificar producto</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="container-fluid">
                                                        <div class="row text-center">
                                                            <i class="bi bi-clipboard-plus-fill icon"></i>
                                                            <form action="/Operis/InventPape/EditProduct" method="post">
                                                                <h5>ID</h5>
                                                                <div class="row">
                                                                    <div class="col"></div>
                                                                    <div class="col">
                                                                        <input type="text" value="<%=product[i].idprodu%>" class="form-control" disabled>
                                                                    </div>
                                                                    <div class="col"></div>
                                                                </div>
                                                                <h5 class="mt-2">Nombre del producto</h5>
                                                                <div class="row">
                                                                    <div class="col"></div>
                                                                    <div class="col">
                                                                        <% console.log(product[i].nom_produ); %>
                                                                        <input type="text" value="<%=product[i].nom_produ%>" name="EditName" class="form-control" disabled>
                                                                    </div>
                                                                    <div class="col"></div>
                                                                </div>
                                                                <h5 class="mt-2">Unidades disponibles</h5>
                                                                <div class="row">
                                                                    <div class="col"></div>
                                                                    <div class="col">
                                                                        <input type="number" value="<%=product[i].unidades_disp%>" name="EditStack" class="form-control">
                                                                    </div>
                                                                    <div class="col"></div>
                                                                </div>
                                                                <h5 class="mt-2">Precio base</h5>
                                                                <div class="row">
                                                                    <div class="col"></div>
                                                                    <div class="col">
                                                                        <input value="<%=product[i].padq_produ%>" name="EditBasePrize" type="text" class="form-control">
                                                                    </div>
                                                                    <div class="col"></div>
                                                                </div>
                                                                <h5 class="mt-2">Precio de venta</h5>
                                                                <div class="row">
                                                                    <div class="col"></div>
                                                                    <div class="col">
                                                                        <input value="<%=product[i].pvent_produ%>" name="EditSellPrize" type="text" class="form-control">
                                                                    </div>
                                                                    <div class="col"></div>
                                                                </div>
                                                                <div class="row mt-3">
                                                                    <div class="col"></div>
                                                                    <div class="col">
                                                                        <button class="btn btn-outline-secondary" value="<%=product[i].idprodu%>" name="EditID">Registrar</button>
                                                            </form>
                                                                    </div>
                                                                    <div class="col"></div>
                                                                    <div class="col">
                                                                        <Button class="btn btn-outline-danger" data-bs-dismiss="modal">Salir</Button>
                                                                    </div>
                                                                    <div class="col"></div>
                                                                </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <form action="/Operis/InventPape/DeleteProduct" method="post">
                                        <button value="<%=product[i].idprodu%>" class="btn btn-danger" name="DeleteId">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        <%
                        }
                        %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm- col-md- col-lg-6 col-xl-6 text-start">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalForm">Registrar producto</button>
                </div>
            </div>
        </div>
        <div class="modal fade"  id="modalForm" tabindex="-1" aria-labelledby="modalFormLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4">
                    <div class="modal-header" id="popupHeader">
                        <h4>Agregar producto</h4>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row text-center">
                                <i class="bi bi-clipboard-plus-fill icon"></i>
                                <form action="/Operis/InventPape/AddProduct"  method="post">
                                    <h5>Nombre del producto</h5>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <input name="ProductName" type="text" class="form-control">
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                    <h5 class="mt-2">Unidades disponibles</h5>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <input type="number" max="999" name="ProductStack" class="form-control">
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                    <h5 class="mt-2">Precio base</h5>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <input type="number" max="999" name="BasePrize" class="form-control">
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                    <h5 class="mt-2">Precio de venta</h5>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <input type="number" max="999" name="SellPrize" class="form-control">
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col"></div>
                                        <div class="col">
                                            <button class="btn btn-outline-secondary">Registrar</button>
                                        </div>
                                </form>
                                        <div class="col"></div>
                                        <div class="col">
                                            <Button class="btn btn-outline-danger" data-bs-dismiss="modal">Salir</Button>
                                        </div>
                                        <div class="col"></div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    let btn = document.querySelector("#btn");
    let sidebar = document.querySelector(".sidebar");

    btn.onclick = function (){
        sidebar.classList.toggle("active");
    }
    //modal
    const myModal = document.getElementById('myModal')
    const myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', () => {
        myInput.focus()
    })
</script>
</body>
</html>