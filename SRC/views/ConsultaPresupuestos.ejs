<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Inventario</title>
    <link href="/CSS/ConsultaPresupuestos.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
<div class="container-fluid principal">
    <div class="row">
        <div class="col-md-2">
            <div class="sidebar">
                <div class="logo_content">
                    <div class="logo">
                        <div class="row">
                            <div class="col">
                                <i class="bi bi-cash-coin"></i>
                            </div>
                            <div class="col">
                                <div class="logo_name">Presupuestos</div>
                            </div>
                        </div>
                    </div>
                    <i class='bx bx-menu-alt-left' id="btn"></i>
                </div>
                <ul class="nav_list">
                    <li class="my-1">
                        <a href="/Operis/PresupuestoDiario">
                            <i class="bi bi-calendar4"></i>
                            <span class="links-name">Diario</span>
                        </a>
                        <span class="tooltip">Presupuesto diario</span>
                    </li>
                    <li class="my-1">
                        <a href="">
                            <i class="bi bi-list-ul"></i>
                            <span class="links-name">Anteriores</span>
                        </a>
                        <span class="tooltip">Consulta</span>
                    </li>
                    <li class="my-1">
                        <a href="/Operis/direct">
                            <i class='bx bx-log-out' ></i>
                            <span class="links-name">Salir</span>
                        </a>
                        <span class="tooltip">Salir</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-sm-12 col-md-1 col-lg-4 col-xl-4-"></div>
                <div class="col-sm-12 col-md-9 col-lg-4 col-xl-4 text-center mt-5 nueve">
                    <div id="titulo" class="fs-2 mb-2 bg-light">
                        Presupuesto
                    </div>
                </div>
                <div class="col-sm-12 col-md-2 col-lg-4 col-xl-4 text-end">
                    <i id="iconusr" class='bx bx-user-circle bx-lg mt-2'></i>
                </div>
            </div>
            <div class="row">
                <div class="table-responsive nueve">
                    <table class="table text-center">
                        <thead class="align-middle">
                        <tr id="theader">
                            <th>ID</th>
                            <th>dia</th>
                            <th>Ingresos totales</th>
                            <th>Gastos totales</th>
                            <th>Ganancias</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody id="tbody" class="align-middle">
                        <%
                        for (let x in pre){
                            %>
                            <tr>
                            <td><%=pre[x].idpres%></td>
                            <td><%=pre[x].dia_pres%></td>
                            <td><%=pre[x].ingreso_pres%></td>
                            <td><%=pre[x].gastos_pres%></td>
                            <td><%=pre[x].gan_pres%></td>
                            <td>
                                <button class="btn btn-secondary mb-1" data-bs-toggle="modal" data-bs-target="#modalFormMod<%=x%>">Modificar</button>
                                <div class="modal fade"  id="modalFormMod<%=x%>" tabindex="-1" aria-labelledby="modalFormLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content rounded-4">
                                            <div class="modal-header" id="popupHeader">
                                                <h4>Modificar producto</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container-fluid">
                                                    <div class="row text-center">
                                                        <i class="bi bi-clipboard-plus-fill icon"></i>
                                                        <form action="/Operis/ConsultaPresupuesto/EditPre" method="post">
                                                            <h5>ID</h5>
                                                            <div class="row">
                                                                <div class="col"></div>
                                                                <div class="col">
                                                                    <input value="<%=pre[x].idpres%>" type="text" class="form-control" disabled>
                                                                </div>
                                                                <div class="col"></div>
                                                            </div>
                                                            <h5 class="mt-2">Ingresos</h5>
                                                            <div class="row">
                                                                <div class="col"></div>
                                                                <div class="col">
                                                                    <input name="ingresos" value="<%=pre[x].ingreso_pres%>" type="text" class="form-control">
                                                                </div>
                                                                <div class="col"></div>
                                                            </div>
                                                            <h5 class="mt-2">Gastos</h5>
                                                            <div class="row">
                                                                <div class="col"></div>
                                                                <div class="col">
                                                                    <input name="gastos" value="<%=pre[x].gastos_pres%>" type="number" class="form-control">
                                                                </div>
                                                                <div class="col"></div>
                                                            </div>
                                                            <h5 class="mt-2">Ganancias</h5>
                                                            <div class="row">
                                                                <div class="col"></div>
                                                                <div class="col">
                                                                    <input name="ganancias" value="<%=pre[x].gan_pres%>" type="text" class="form-control">
                                                                </div>
                                                                <div class="col"></div>
                                                            </div>
                                                            <div class="row mt-3">
                                                                <div class="col"></div>
                                                                <div class="col">
                                                                    <button name="idpres" value="<%=pre[x].idpres%>" class="btn btn-outline-secondary">Registrar</button>
                                                        </form>
                                                                </div>
                                                                <div class="col"></div>
                                                                <div class="col">
                                                                    <Button class="btn btn-outline-danger" data-bs-dismiss="modal">Salir</Button>
                                                                </div>
                                                                <div class="col"></div>
                                                            </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <form action="/Operis/ConsultaPresupuesto/DelPre" method="post">
                                    <button name="idpres" value="<%=pre[x].idpres%>" class="btn btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                        <%
                        }
                        %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm- col-md- col-lg-6 col-xl-6 text-start nueve">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalForm">Registrar presupuesto manualmente</button>
                </div>
            </div>
        </div>
        <div class="modal fade"  id="modalForm" tabindex="-1" aria-labelledby="modalFormLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4">
                    <div class="modal-header" id="popupHeader">
                        <h4>Agregar producto</h4>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row text-center">
                                <i class="bi bi-clipboard-plus-fill icon"></i>
                                <form action="/Operis/ConsultaPresupuesto/AddPre" method="post">
                                    <h5>Día</h5>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <input name="dia" class="form-control" type="date">
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                    <h5 class="mt-2">Ingresos</h5>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <input name="ingreso" type="text" class="form-control">
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                    <h5 class="mt-2">Gastos</h5>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <input name="gastos" type="number" class="form-control">
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                    <h5 class="mt-2">Ganancias</h5>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col">
                                            <input name="gan" type="text" class="form-control">
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col"></div>
                                        <div class="col">
                                            <button class="btn btn-outline-secondary">Registrar</button>
                                </form>
                                        </div>
                                        <div class="col"></div>
                                        <div class="col">
                                            <Button class="btn btn-outline-danger" data-bs-dismiss="modal">Salir</Button>
                                        </div>
                                        <div class="col"></div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    let btn = document.querySelector("#btn");
    let sidebar = document.querySelector(".sidebar");

    btn.onclick = function (){
        sidebar.classList.toggle("active");
    }
    //modal
    const myModal = document.getElementById('myModal')
    const myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', () => {
        myInput.focus()
    })
</script>
</body>
</html>